<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<artifactId>org.preesm.test.ui</artifactId>
	<packaging>rcpttTest</packaging>

	<parent>
		<groupId>org.ietr.preesm</groupId>
		<artifactId>org.ietr.preesm.test</artifactId>
		<version>2.14.1</version>
		<relativePath>..</relativePath>
	</parent>

  <repositories>
		<repository>
			<id>rcptt-releases</id>
			<name>RCPTT Maven repository</name>
			<url>https://repo.eclipse.org/content/repositories/rcptt-releases/</url>
		</repository>
  </repositories>
  <pluginRepositories>
		<pluginRepository>
			<id>rcptt-releases</id>
			<name>RCPTT Maven repository</name>
			<url>https://repo.eclipse.org/content/repositories/rcptt-releases/</url>
		</pluginRepository>
  </pluginRepositories>

  <dependencies>
    <!--
      Have the dependency to make sure the product is built before
      running the test, but as a 'pom' type and not 'eclipse-repository'
      to not have dependency resolution issues when invoking maven with
      goal prior to package.
    -->
    <dependency>
      <groupId>org.ietr.preesm</groupId>
      <artifactId>org.ietr.preesm.product</artifactId>
      <version>${project.version}</version>
      <type>pom</type>
    </dependency>
  </dependencies>

  <profiles>
    <!--
      Specific profile for Eclipse to skip downloading the RCPTT
      runner related configuration.
    -->
    <profile>
      <id>not-eclipse</id>
      <activation>
        <property>
          <name>!m2e.version</name>
        </property>
      </activation>
      <dependencies>
        <!-- for safe go-offline execution -->
        <dependency>
          <groupId>org.jacoco</groupId>
          <artifactId>jacoco-maven-plugin</artifactId>
          <version>${jacoco-version}</version>
        </dependency>
        <dependency>
          <groupId>org.eclipse.rcptt.runner</groupId>
          <artifactId>rcptt.runner</artifactId>
          <version>${rcptt-version}</version>
          <type>zip</type>
        </dependency>
      </dependencies>
    </profile>
  </profiles>

  <build>
    <pluginManagement>
      <plugins>
        <plugin>
          <groupId>org.eclipse.rcptt</groupId>
          <artifactId>rcptt-maven-plugin</artifactId>
          <version>${rcptt-version}</version>
          <extensions>true</extensions>
          <configuration>
            <runner>
              <version>${rcptt-version}</version>
            </runner>
            <!-- The main configuration section goes here -->
            <aut>
              <groupId>org.ietr.preesm</groupId>
              <artifactId>org.ietr.preesm.product</artifactId>
              <version>${project.version}</version>
              <vmArgs>
                <vmArg>-javaagent:${settings.localRepository}/org/jacoco/org.jacoco.agent/${jacoco-version}/org.jacoco.agent-${jacoco-version}-runtime.jar=destfile=${project.basedir}/${sonar.jacoco.reportPaths},append=true,excludes=**/tests/**:**/test-fragments/**:**/releng/**</vmArg>
              </vmArgs>
            </aut>
          </configuration>
        </plugin>
      </plugins>
    </pluginManagement>
    <plugins>
      <plugin>
        <groupId>org.eclipse.rcptt</groupId>
        <artifactId>rcptt-maven-plugin</artifactId>
      </plugin>
    </plugins>
  </build>
</project>
